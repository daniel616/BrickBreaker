package application;

import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.VBox;

/**
 * 
 * @author Daniel
 * Simply stores the various components of the display, such as the consoleoutput, turtlescreen etc.
 * Holds a scene that can be returned.
 */
public class UserInterface{
	private Scene myScene;
	private TextInput input;
	private ConsoleOutput output;
	private TurtleScreen screen;
	private final int HEIGHT=400;
	private final int WIDTH=400;
	
	public UserInterface(TextInput input, ConsoleOutput output, TurtleScreen screen){
		this.screen=screen;
		this.input=input;
		this.output=output;
		
		BorderPane root=new BorderPane();
		
		VBox textInfo =new VBox();
		textInfo.getChildren().addAll(input,output);
		
		root.setRight(textInfo);
		root.setCenter(screen.getTurtleScreen());
		
		myScene= new Scene(root,HEIGHT,WIDTH);
	}
	
	public Scene getScene(){
		return myScene;
	}
	
	//
}
