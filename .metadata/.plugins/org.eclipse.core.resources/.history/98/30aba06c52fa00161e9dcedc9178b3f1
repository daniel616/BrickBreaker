	public void start(Stage primaryStage){
		try{
			List<Turtle> turtleList=new ArrayList<>();
			turtleList.add(new Turtle());
			ControlCenter center=new ControlCenter();
			
			primaryStage.setScene(createVisuals());		
			primaryStage.show();
		}
		catch(Exception e){
			e.printStackTrace();
		}
		
	}
	
	public Scene createVisuals(){
		ConsoleOutput console=new ConsoleOutput();
		TextInput input = new TextInput();
		BorderPane root=new BorderPane();
	//Jakes TurtleBox
		
		VBox textInfo =new VBox();
		textInfo.getChildren().addAll(input,console);
		root.setRight(textInfo);
		
		Scene s= new Scene(root,HEIGHT,WIDTH);
		return s;
	}
	
	public static void main(String[] args) {
		launch(args);
	}
}
