package commands.TurtleCommands;

import java.util.List;

import application.Turtle;
import application.TurtleState;
import exceptions.StateNotFoundException;

/** PenDown makes the Turtle object put its pen down so that it now may draw when it moves. It returns 1.
 * 
 * @author Kyle
 *
 */
public class PenDown extends TurtleCommands {
	
	public static final int VARIABLES = 0;

	public PenDown(List<Double> args) {
		super(args);
	}

	@Override
	public double execute(Turtle t) throws StateNotFoundException {
		TurtleState lastState = t.getFinalTurtleState();
		t.addTurtleState(lastState.getX(), lastState.getY(), lastState.getHeading(), true,
				lastState.getColor(), lastState.turtleShowing());
		return 1;
	}

}
