package TurtleDetails;

import javafx.scene.paint.Color;
/**
 * 
 * @author Daniel
 * Stores variables representing the state of the turtle at some point in time.
 * Turtles store a "queue" of these states to transition between. Immutable.
 */
public class TurtleState {
	private final double x;
	private final double y;
	private final double heading;
	private final boolean penDown;
	private final Color color;
	private final boolean turtleShowing;

	public TurtleState(double x, double y, double heading, boolean penDown, Color color, boolean turtleShowing) {
		this.x = x;
		this.y = y;
		this.heading = heading;
		this.penDown = penDown;
		this.color = color;
		this.turtleShowing = turtleShowing;
	}

	public double getX() {
		return x;
	}

	public double getY() {
		return y;
	}

	public double getHeading() {
		return heading;
	}

	public boolean penDown() {
		return penDown;
	}

	public Color getColor() {
		return color;
	}

	public boolean turtleShowing() {
		return turtleShowing;
	}
	
	public TurtleState copy(){
		return new TurtleState(x,y,heading,penDown,color,turtleShowing);
	}
	
	public String toString(){
		String s ="x:"+x+",y:"+y+",heading:"+heading+",pendown:"+penDown+",Color:"+color+",TurtleShowing:"+turtleShowing;
	}
}
