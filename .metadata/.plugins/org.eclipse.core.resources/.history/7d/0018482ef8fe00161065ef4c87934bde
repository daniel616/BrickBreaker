package commands.TurtleCommands;

import java.util.List;

import TurtleDetails.Turtle;
import TurtleDetails.TurtleState;
import exceptions.CommandException;
import exceptions.StateNotFoundException;

/**
 * Left turns the passed Turtle's heading left by the entered degrees and
 * returns degrees turned
 * 
 * @author Kyle
 *
 */
public class Left extends TurtleCommands {

	public static final int VARIABLES = 1;

	public Left(List<String> args) throws CommandException {
		super(args);
		if (args.size() != VARIABLES) {
			throw new RuntimeException("Incorrect number of variables in entered list");
		}
	}

	@Override
	public double execute(Turtle t) throws StateNotFoundException {
		TurtleState lastState = t.getFinalTurtleState();

		double normalizedHeading = normalizeHeading(lastState.getHeading() + doubleArguments.get(0));

		t.addTurtleState(lastState.getX(), lastState.getY(), normalizedHeading,
				lastState.penDown(), lastState.getColor(), lastState.turtleShowing());
		return doubleArguments.get(0);
	}

}
