package gui;

import javafx.geometry.Insets;
import javafx.scene.Node;
import javafx.scene.control.Button;
import javafx.scene.layout.HBox;
import gui.TurtleScreen;

/**
 * This class will create an object that contains an Hbox that
 * holds all of the buttons that affect the turtle screen
 * 
 * Created February 23rd, 2017
 * @author Jake Conroy
 *
 */
public class TurtleScreenButtons {
	
	private HBox base = new HBox();
	private Button startStop;
	private Button clearScreen;
	private Button newTurtle;
	
	public TurtleScreenButtons() {
		makeHBox();
		makeButtons();
		base.getChildren().addAll(startStop, clearScreen, newTurtle);
	}
	
	private void makeHBox() {
		base.setPadding(new Insets(10, 10, 10, 10));
		base.setSpacing(10);
		base.setStyle("-fx-background-color: #00ffff;");
	}
	
	private void makeButtons() {
		startStop = new Button("Start/Stop");
		startStop.setPrefSize(100, 25);
		clearScreen = new Button("Clear");
		clearScreen.setPrefSize(100, 25);
		//clearScreen.setOnAction(e -> clearScreen());
		newTurtle = new Button("Add Turtle");
		newTurtle.setPrefSize(100, 25);
	}
	
	public HBox getButtons() {
		return base;
	}
	
}
