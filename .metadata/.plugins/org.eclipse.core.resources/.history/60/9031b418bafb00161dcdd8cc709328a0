package commands.TurtleCommands;

import java.util.List;

import application.Turtle;
import application.TurtleState;
import exceptions.StateNotFoundException;

public class Right extends TurtleCommands {
	
	public static final int VARIABLES = 1;

	public Right(List<Double> args) {
		super(args);
	}

	@Override
	public double execute(Turtle t) throws StateNotFoundException {
		TurtleState lastState = t.getFinalTurtleState();
		t.addTurtleState(lastState.getX(), lastState.getY(), lastState.getHeading()-arguments.get(0), lastState.penDown(), lastState.getColor(), lastState.turtleShowing());
		return arguments.get(0);
	}

}
