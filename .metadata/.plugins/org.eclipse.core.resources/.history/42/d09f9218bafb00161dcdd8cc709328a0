package commands.TurtleCommands;

import java.util.List;

import application.Turtle;
import application.TurtleState;
import exceptions.StateNotFoundException;

/** HideTurtle makes the Turtle object invisible where it is being viewed. Returns 0.
 * 
 * @author Kyle
 *
 */
public class HideTurtle extends TurtleCommands {
	
	public static final int VARIABLES = 0;

	public HideTurtle(List<Double> args) {
		super(args);
	}

	@Override
	public double execute(Turtle t) throws StateNotFoundException {
		TurtleState lastState = t.getFinalTurtleState();
		t.addTurtleState(lastState.getX(), lastState.getY(), lastState.getHeading(), lastState.penDown(),
				lastState.getColor(), false);
		return 0;
	}

}
